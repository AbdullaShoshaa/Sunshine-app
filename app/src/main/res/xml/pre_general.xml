<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:key="@string/location_preference_key"
        android:title="@string/pref_title_location"
        android:defaultValue="@string/postal_code_defaultvalue"
        android:inputType="text"
        android:singleLine="true"
        />
    <ListPreference
        android:title="@string/units_pref_title"
        android:dialogTitle="@string/units_pref_title"
        android:key="@string/units_pref_key"
        android:entries="@array/units_entries"
        android:entryValues="@array/units_entry_values"
        android:defaultValue="@string/units_default_value"
        />
</PreferenceScreen>